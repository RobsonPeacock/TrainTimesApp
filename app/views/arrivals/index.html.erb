<div class="container table-responsive py-5">
<h1>Great Portland Street</h1>

  <% @arrivals.each do |platform, arrivals| %>
    <h1><%= platform %></h1>

    <table class="table table-bordered table-hover">
      <thead class="table-primary">
        <tr>
          <th scope="col">Line Name</th>
          <th scope="col">Platform</th>
          <th scope="col">Destination</th>
          <th scope="col">Expected in</th>
          <th scope="col">Scheduled</th>
        </tr>
      </thead>
        <tbody>

      <% arrivals.each do |arrival| %>
        <tr>
          <td><%= arrival.line %></td>
          <td><%= arrival.platform %></td>
          <td><%= arrival.destination %></td>
          <td><%= arrival.actual_time / 60 %> minutes</td>
          <td><%= formatted_date(arrival.scheduled_time) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>
</div>